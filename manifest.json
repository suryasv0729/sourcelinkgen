{
  "manifest_version": 3,
  "name": "links for manual cleaning",
  "version": "1.0",
  "description": "Copies a predefined text like facebook , linkedin and current domain to the clipboard.",
  "permissions": ["activeTab", "storage", "clipboardWrite", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "./icon16.png.png"
    }
  }
}
